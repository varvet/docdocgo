<div class="container">

  <div class="content">
    <%= @project.as_html %>
    <div class="content__actions">
      <% @project.versions.each do |version|%>
        <%
          klass = version == params[:version] ? "content__actions__version" : "content__actions__version content__actions__version--active"
        %>
        <%= link_to version, "/projects/" + @project.url_for_version(version), class: klass
        %>
      <% end %>
    </div>
  </div>

  <div class="sidebar">
    <h3>Table of contents</h3>

    <ul class="sidebar__nav">
      <% @project.headers.each do |header| %>
        <li class="sidebar__nav__item">
        <% if header.is_a?(Array) %>
          <ul class="sidebar__nav">
            <% header.each do |header| %>
              <li class="sidebar__nav__item">
                <a href="#<%= header.parameterize %>"><%= header %></a>
              </li>
            <% end %>
          </ul>
        <% else %>
          <a href="#<%= header.parameterize %>"><%= header %></a>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
